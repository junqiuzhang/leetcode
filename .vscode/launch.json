{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Build",
      "skipFiles": ["<node_internals>/**"],
      "args": ["scripts/build/index.js", "${fileDirname}"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "skipFiles": ["<node_internals>/**"],
      "args": ["scripts/test/index.js", "${fileDirname}"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test all",
      "skipFiles": ["<node_internals>/**"],
      "args": ["scripts/test/index.js"]
    },
  ]
}
